<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <jp.stage.stagelovemaker.views.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/edit_profile_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:layout_marginTop="-1.8dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/avatar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/avatar_user_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/avatar_main_layout"
                        android:layout_width="200dp"
                        android:layout_height="200dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/avatar_main_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_add_avatar"
                            app:riv_border_color="@android:color/transparent"
                            app:riv_border_width="1dip"
                            app:riv_corner_radius="10dp" />

                        <ImageView
                            android:id="@+id/remove_main_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:src="@drawable/icon_remove" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/avatar_default_1_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/avatar_default_1_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/icon_add_avatar"
                                app:riv_border_color="@android:color/transparent"
                                app:riv_border_width="1dip"
                                app:riv_corner_radius="10dp" />

                            <ImageView
                                android:id="@+id/remove_default_1_img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:padding="5dp"
                                android:src="@drawable/icon_remove" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/avatar_default_2_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/icon_add_avatar"
                                app:riv_border_color="@android:color/transparent"
                                app:riv_border_width="1dip"
                                app:riv_corner_radius="10dp" />

                            <ImageView
                                android:id="@+id/remove_default_2_img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:padding="5dp"
                                android:src="@drawable/icon_remove" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avatar_add_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/avatar_user_layout"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/avatar_default_5_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_add_avatar"
                            app:riv_border_color="@android:color/transparent"
                            app:riv_border_width="1dip" />

                        <ImageView
                            android:id="@+id/remove_default_5_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="5dp"
                            android:src="@drawable/icon_remove"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/avatar_default_4_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_add_avatar"
                            app:riv_border_color="@android:color/transparent"
                            app:riv_border_width="1dip"
                            app:riv_corner_radius="10dp" />

                        <ImageView
                            android:id="@+id/remove_default_4_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="5dp"
                            android:src="@drawable/icon_remove" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/avatar_default_3_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_add_avatar"
                            app:riv_border_color="@android:color/transparent"
                            app:riv_border_width="1dip"
                            app:riv_corner_radius="10dp" />

                        <ImageView
                            android:id="@+id/remove_default_3_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="5dp"
                            android:src="@drawable/icon_remove" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/dark_gray" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>